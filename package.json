{
  "name": "etrusted-connector",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite --mode development",
    "build:qa": "cross-env VITE_USE_MOCK_BASELAYER=0 vite build --mode development",
    "build": "cross-env VITE_USE_MOCK_BASELAYER=0 vite build --mode production",
    "build:license": "cross-env VITE_USE_MOCK_BASELAYER=0 vite build && npx license-checker --production --json --customPath licence-template.json > src/licences.json",
    "serve": "vite preview",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "zip": "bestzip eTrustedConnector.zip eTrustedConnector/*",
    "demo:dev": "cross-env VITE_USE_MOCK_BASELAYER=0 vite build && start demo/index.html",
    "dev:test": "vite --mode test"
  },
  "dependencies": {
    "axios": "1.6.0",
    "history": "5.3.0",
    "path": "0.12.7",
    "preact": "10.27.1",
    "preact-router": "4.1.2",
    "react-hook-form": "7.62.0",
    "zustand": "4.5.7"
  },
  "devDependencies": {
    "@preact/preset-vite": "2.10.2",
    "@types/history": "4.7.11",
    "@types/node": "20.19.13",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "10.4.21",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-preact": "1.5.0",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.5.2",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "vite": "5.0.11",
    "vite-plugin-environment": "1.1.3"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,scss}": [
      "npm run lint -- --fix",
      "npm run format"
    ]
  }
}
